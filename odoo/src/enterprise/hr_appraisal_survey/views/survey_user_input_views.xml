<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_user_input_view_tree" model="ir.ui.view">
        <field name="name">survey.user.input.view.tree.inherit.appraisal</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_tree"/>
        <field name="priority">32</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="scoring_percentage" position="after">
                <button class="oe_stat_button" name="action_open_survey_inputs" icon="fa-external-link" type="object" title="View Results"/>
            </field>
        </field>
    </record>

    <record id="hr_appraisal_survey_user_input_view_tree" model="ir.ui.view">
        <field name="name">survey.user.input.view.tree.inherit.appraisal</field>
        <field name="model">survey.user_input</field>
        <field name="arch" type="xml">
            <tree create="0">
                <header>
                    <button string="All answers" name="action_open_all_survey_inputs" icon="fa-external-link" type="object"/>
                </header>
                <field name="partner_id" string="Employee"/>
                <field name="state" widget="badge"
                    decoration-success="state == 'done'"
                    decoration-warning="state == 'new'"
                    decoration-info="state == 'in_progress'"
                />
                <field name="deadline"/>
                <field name="survey_id"/>
                <button class="oe_stat_button" string="See Answers" attrs="{'invisible': [('state', '!=', 'done')]}" name="action_open_survey_inputs" icon="fa-external-link" type="object"/>
                <button class="oe_stat_button" string="Resend" attrs="{'invisible': [('state', '=', 'done')]}" name="action_ask_feedback" icon="fa-check-square-o" type="object"/>
            </tree>
        </field>
    </record>
</odoo>
