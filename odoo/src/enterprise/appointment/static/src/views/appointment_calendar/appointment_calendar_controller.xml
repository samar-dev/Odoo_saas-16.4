<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="appointment.AppointmentCalendarController" t-inherit="calendar.AttendeeCalendarController" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@t-if='showSideBar']/*[1]" position="before">
            <div id="scheduling_box" class="mb-2">
                <div t-if="env.calendarState.mode === 'slots-creation' || appointmentState.lastAppointmentUrl" class="o_appointment_scheduling_message_box alert alert-primary">
                    <div>
                        <p t-if="appointmentState.lastAppointmentUrl" class="user-select-none">
                            <i class="fa fa-check"/> Link Copied in your clipboard!
                        </p>
                        <p t-else="" class="user-select-none">
                            Click in your calendar to pick meeting time proposals.
                        </p>
                    </div>
                    <span class="o_appointment_scheduling_buttons d-flex">
                        <button t-attf-class="btn btn-primary flex-grow-1 o_appointment_get_link ${this.appointmentState.lastAppointmentUrl || this.hasSlotEvents() ? '' : 'disabled pe-none'}" aria-label="Get Share Link"
                            t-on-click="onClickGetShareLink" t-ref="copyLinkRef">
                            <i class="fa fa-link"/> Get Share Link
                        </button>
                        <button class="btn btn-secondary ms-1 o_appointment_discard_slots" aria-label="Discard"
                            t-on-click="onClickDiscard">
                            <i class="fa fa-times"/>
                        </button>
                    </span>
                </div>
                <div t-else="" class="btn-group px-0 o_appointment_calendar_group_buttons w-100">
                    <button t-on-click="onClickSelectAvailabilities" class="btn btn-primary o_appointment_select_slots" aria-label="Share Availabilities" title="Share Availabilities">
                        Share Availabilities
                    </button>
                    <button id="dropdownAppointmentLink" class="btn btn-primary dropdown-toggle flex-grow-0" data-bs-toggle="dropdown">
                        <span class="oi oi-chevron-down"/>
                    </button>
                    <div id="dropdownMenuAppointmentLink" class="dropdown-menu dropdown-menu-end col w-100" data-labelledby="dropdownAppointmentLink">
                        <button t-on-click="onClickSelectAvailabilities" id="select_availabilities" class="o_appointment_select_slots dropdown-item">
                            <span class="align-bottom">Select Dates</span>
                        </button>
                        <button t-on-click="onClickSearchCreateAnytimeAppointment"
                            class="o_appointment_button_link o_appointment_search_create_anytime_appointment dropdown-item">
                            <span class="align-bottom">Any Time</span>
                        </button>
                        <button t-on-click="onClickCustomLink" class="dropdown-item">
                            <span class="align-bottom">Custom Link</span>
                        </button>
                        <t t-set="appointments" t-value="appointmentState.data.appointment_types_info"/>
                        <div t-if="appointments.length > 0" role="separator" class="dropdown-divider"/>
                        <t t-foreach="appointments" t-as="appointment" t-key="appointment.id">
                            <button t-att-title="appointment.name" t-on-click.stop.prevent="() => this.onClickGetAppointmentUrl(appointment.id)"
                                class="o_appointment_button_link o_appointment_appointment_link_clipboard dropdown-item text-truncate">
                                <span class="align-bottom" t-out="appointment.name"/>
                            </button>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>
