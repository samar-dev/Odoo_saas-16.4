<?xml version="1.0" encoding="UTF-8"?>
<template>
    <t t-name="appointment.slots_list">
        <div class="text-center o_appointment_selected_slot_date pt-1" t-out="slotDate"/>
        <div class="o_slots_list row px-0">
            <t t-foreach="slots" t-as="slot">
                <div t-attf-class="col-md-6 col-12 mt-2 #{slot_index % 2 == 0 ? 'pe-md-1' : 'ps-md-1'}">
                    <button class="o_slot_hours d-flex btn btn-outline-primary align-items-center justify-content-center w-100"
                        t-att-data-available_resources="scheduleBasedOn === 'resources' ? JSON.stringify(slot['available_resources']) : false"
                        t-attf-data-url-parameters="#{slot['url_parameters']}&amp;#{commonUrlParams}"
                        t-out="slot['hours']"/>
                </div>
            </t>
        </div>
    </t>

</template>
