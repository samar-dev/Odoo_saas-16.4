<?xml version="1.0" encoding="utf-8"?>
<templates>

    <t t-name="web_studio.Property" owl="1">
        <div t-if="props.type === 'selection'" class="o_web_studio_property o_web_studio_sidebar_select mt-2 mb-2" t-att-class="className" t-att-name="props.name">
            <label t-att-for="props.name">
                <t t-slot="default" />
                <sup t-if="props.tooltip" class="text-info p-1" t-att-data-tooltip="props.tooltip" t-esc="'?'"/>
            </label>
            <t t-set="choices" t-value="props.childProps.choices" />
            <SelectMenu t-if="choices"
                t-props="props.childProps"
                value="props.value"
                onSelect="(value) => this.props.onChange(value, this.props.name)"
                class="'border-0'"
                togglerClass="'bg-dark text-light p-2'"
                searchable="choices.length > 8"
                required="props.childProps.required !== undefined ? props.required : true"
            />
        </div>

        <t t-elif="props.type === 'boolean'">
            <div class="o_web_studio_property clearfix o_web_studio_sidebar_checkbox d-flex" t-att-class="props.class">
                <CheckBox
                    className="getCheckboxClassname(props.value)"
                    id="props.name"
                    name="props.name"
                    value="!!props.value"
                    onChange="(value) => this.props.onChange(value, this.props.name)"
                >
                    <t t-slot="default" />
                    <sup t-if="props.tooltip" class="text-info p-1" t-att-data-tooltip="props.tooltip" t-esc="'?'"/>
                </CheckBox>
                <a t-if="props.isConditional" t-on-click.prevent.stop="onConditionalButtonClicked" role="button" href="#" data-type="invisible" class="btn btn-link o_web_studio_attrs ms-auto">
                    Conditional
                </a>
            </div>
        </t>
        <div t-elif="props.type === 'domain'" class="o_web_studio_property o_web_studio_sidebar_text mt-3 d-flex flex-column" t-att-class="props.class">
            <label t-att-for="props.name">
                <t t-slot="default" />
                <sup t-if="props.tooltip" class="text-info p-1" t-att-data-tooltip="props.tooltip" t-esc="'?'"/>
            </label>
            <span t-if="props.isReadonly" t-att-name="props.name" t-esc="props.value" />
            <input
                t-else=""
                t-att-name="props.name"
                t-att-id="props.name"
                t-att-type="props.type"
                t-att-value="props.value"
                t-att-class="`form-${props.type}-input`"
                t-on-click.prevent.stop="onDomainClicked"
            />
        </div>

        <div t-else="" class="o_web_studio_property o_web_studio_sidebar_text mt-3 d-flex flex-column" t-att-class="props.class">
            <label t-att-for="props.name">
                <t t-slot="default" />
                <sup t-if="props.tooltip" class="text-info p-1" t-att-data-tooltip="props.tooltip" t-esc="'?'"/>
            </label>
            <span t-if="props.isReadonly" t-att-name="props.name" t-esc="props.value" class="text-white mb-1 ps-1" />
            <input
                t-else=""
                t-att-name="props.name"
                t-att-id="props.name"
                t-att-type="props.type"
                t-att-value="props.value"
                t-att-class="`form-${props.type}-input`"
                t-on-change="(ev) => this.props.onChange(ev.target.value, this.props.name)"
            />
        </div>
    </t>

</templates>
