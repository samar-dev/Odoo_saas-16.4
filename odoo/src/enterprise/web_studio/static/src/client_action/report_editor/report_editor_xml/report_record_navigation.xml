<templates>

<t t-name="web_studio.ReportEditor.ReportRecordNavigation" owl="1">
    <div class="d-flex flex-row gap-3" style="height: 35px;">
        <div class="position-relative rounded-pill o-web-studio-report-search-record p-1 px-2 bg-white" style="max-width: 150px;" >
            <i class="fa fa-search position-absolute end-0 me-3 mt-1"/>
            <Record t-props="searchRecordProps" onRecordChanged.bind="updateSearch" t-slot-scope="scope">
                <Many2OneField name="'record_id'" record="scope.record" domain="reportEditorModel.getModelDomain()" canOpen="false" canCreate="false" canCreateEdit="false" canQuickCreate="false" context="m2oSelectorContext"/>
            </Record>
        </div>
        <div class="d-flex rounded-pill px-3 o-web-studio-report-pager bg-white" >
            <Pager t-props="pagerProps" onUpdate.bind="updatePager"/>
        </div>
    </div>
</t>

</templates>
