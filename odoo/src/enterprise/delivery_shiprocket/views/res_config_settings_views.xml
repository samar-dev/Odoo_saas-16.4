<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_sale_shiprocket" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.delivery.shiprocket.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='shipping_costs_sendcloud']" position="after">
                <setting id="shipping_costs_sendcloud" help="Compute shipping costs and ship with Shiprocket"
                         documentation="/applications/inventory_and_mrp/inventory/shipping/setup/third_party_shipper.html">
                    <field name="module_delivery_shiprocket" widget="upgrade_boolean"/>
                    <div class="content-group">
                        <div class="mt8" attrs="{'invisible': [('module_delivery_shiprocket','=',False)]}">
                            <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="Shiprocket Shipping Methods" class="btn-link" context="{'search_default_delivery_type': 'shiprocket'}"/>
                        </div>
                    </div>
                </setting>
             </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_stock_shiprocket" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.delivery.shiprocket.stock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='compute_shipping_costs_sendcloud']" position="after">
                <setting id="compute_shipping_costs_shiprocket" help="Compute shipping costs and ship with Shiprocket" documentation="/applications/inventory_and_mrp/inventory/shipping/setup/third_party_shipper.html">
                    <field name="module_delivery_shiprocket" widget="upgrade_boolean"/>
                    <div class="content-group">
                        <div class="mt8" attrs="{'invisible': [('module_delivery_shiprocket', '=', False)]}">
                            <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="Shiprocket Shipping Methods" class="btn-link" context="{'search_default_delivery_type': 'shiprocket'}"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>
