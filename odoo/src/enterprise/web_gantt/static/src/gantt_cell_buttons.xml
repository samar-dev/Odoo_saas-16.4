<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web_gantt.GanttCellButtons" owl="1">
        <div t-if="props.reactive.cell"
            class="o_gantt_cell_buttons position-absolute d-flex"
            t-on-pointermove.stop=""
            z-index="10"
            t-ref="root"
        >
            <i t-if="props.canCreate"
                title="Create"
                class="o_gantt_cell_add fa fa-plus d-flex align-items-center justify-content-center"
                t-att-class="{ 'pe-1' : props.canPlan }"
                t-on-click.stop="onCreate"
            />
            <i t-if="props.canPlan"
                title="Plan existing"
                class="o_gantt_cell_plan fa fa-search-plus d-flex align-items-center justify-content-center"
                t-on-click.stop="onPlan"
            />
        </div>
    </t>

</templates>
