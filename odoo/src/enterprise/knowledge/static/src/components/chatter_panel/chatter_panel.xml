<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <div t-name="knowledge.KnowledgeArticleChatter" owl="1" t-ref="root">
        <div t-if="this.state.displayChatter" class="o_FormRenderer_chatterContainer oe_chatter o_scroll_view_lg">
            <Chatter
                threadModel="'knowledge.article'"
                threadId="this.props.record.data.id"
                webRecord="this.props.record"
                hasParentReloadOnAttachmentsChanged="true"
                hasParentReloadOnFollowersUpdate="true"
                hasParentReloadOnMessagePosted="true"
            />
        </div>
    </div>
</templates>
