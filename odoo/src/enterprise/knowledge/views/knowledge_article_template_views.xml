<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="knowledge_article_template_view_search" model="ir.ui.view">
        <field name="name">knowledge.article.template.view.search</field>
        <field name="model">knowledge.article.template</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="category_id"/>
                <filter name="filter_not_is_template_item" string="Templates"
                    domain="[('is_template_item', '=', False)]"/>
                <filter name="filter_is_template_item" string="Template Items"
                    domain="[('is_template_item', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_category" domain="[]" context="{'group_by': 'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="knowledge_article_template_view_tree" model="ir.ui.view">
        <field name="name">knowledge.article.template.view.tree</field>
        <field name="model">knowledge.article.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name" string="Name"/>
                <field name="parent_id"/>
                <field name="category_id"/>
            </tree>
        </field>
    </record>

    <record id="knowledge_article_template_view_form" model="ir.ui.view">
        <field name="name">knowledge.article.template.view.form</field>
        <field name="model">knowledge.article.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="icon" widget="char_emojis"/>
                        <field name="body" widget="text"/>
                        <field name="description"/>
                        <field name="parent_id" domain="[('id', '!=', active_id)]"/>
                        <field name="is_template_item" attrs="{'invisible': [('parent_id', '=', False)]}"/>
                        <field name="template_properties" attrs="{'invisible': [('parent_id', '=', False)]}"/>
                        <field name="category_id"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="knowledge_article_template_action" model="ir.actions.act_window">
        <field name="name">Article Templates</field>
        <field name="res_model">knowledge.article.template</field>
        <field name="search_view_id" ref="knowledge_article_template_view_search"/>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
