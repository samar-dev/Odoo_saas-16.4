<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="loyalty_program_view_form_inherit" model="ir.ui.view">
            <field name="name">loyalty.program.view.form.inherit</field>
            <field name="model">loyalty.program</field>
            <field name="inherit_id" ref="loyalty.loyalty_program_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="vendor_id"/>
                    <field name="partner_id" widget="many2many_tags" domain="[('user_id','=', vendor_id)]" options="{'no_create': 1, 'no_edit': 1}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
