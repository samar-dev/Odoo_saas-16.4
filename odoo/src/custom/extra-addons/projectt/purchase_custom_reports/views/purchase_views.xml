<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_custom_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.custom.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='date_planned']" position="after">
                    <field name="bat_date"/>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fiscal_position_id']" position="after">
                    <field name="industry_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_custom_move_form" model="ir.ui.view">
            <field name="name">account.custom.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="purchase_vendor_bill_id" position="after">
                    <field name="industry_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
