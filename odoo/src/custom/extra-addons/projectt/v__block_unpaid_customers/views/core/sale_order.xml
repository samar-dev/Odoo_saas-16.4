<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view_order_form_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='partner_details']" position="inside">
                    <field name="x_show_block_unpaid_customer" invisible="1" />
                    <field name="x_is_sale_allowed" widget="boolean_toggle" attrs="{'invisible': [('x_show_block_unpaid_customer', '=', False)]}" />
                </xpath>

            </field>
        </record>

    </data>
</odoo>
