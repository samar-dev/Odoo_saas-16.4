<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res_config_settings_view_form_inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='reception_report']" position="after">
                    <setting id="pallet_weight" help="Define the pallet weight to calculate total gross weight in sale order">
                        <field name="pallet_weight"/>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
