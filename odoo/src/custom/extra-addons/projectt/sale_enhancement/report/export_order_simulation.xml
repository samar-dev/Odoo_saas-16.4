<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="action_export_order_simulation" model="ir.actions.report">
            <field name="name">Export order simulation</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sale_enhancement.template_export_os</field>
            <field name="report_file">sale_enhancement.template_export_os</field>
            <field name="print_report_name">'Export OS - %s' % (object.name)</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
        </record>

        <template id="template_export_os">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
