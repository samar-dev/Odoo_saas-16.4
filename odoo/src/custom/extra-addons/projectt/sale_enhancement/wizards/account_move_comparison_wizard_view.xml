<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_move_comparison_wizard_form" model="ir.ui.view">
            <field name="name">account.move.comparison.wizard.form</field>
            <field name="model">account.move.comparison.wizard</field>
            <field name="arch" type="xml">
                <form string="Compare Monthly Totals">
                    <group>
                        <group>
                            <field name="customer_ids" widget="many2many_tags"/>
                            <field name="invoice_user_id"/>
                            <field name="product_ids" widget="many2many_tags"/>
                            <field name="years_to_compare"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="company_id"/>
                            <field name="report_template"/>
                        </group>


                    </group>
                    <footer>
                        <button string="Imprimer" type="object" name="action_compare_report" class="btn-primary"/>
                        <button name="action_export_excel" type="object" class="oe_highlight" string="Export Excel" icon="fa-file-excel-o"/>

                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                    <separator string="Results"/>
                    <field name="results" nolabel="1"/>
                </form>
            </field>
        </record>


        <record id="action_account_move_comparison_wizard" model="ir.actions.act_window">
            <field name="name">Compare Moves</field>
            <field name="res_model">account.move.comparison.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="sale_order_menu_rapport" name="Rapports" sequence="30" parent="sale.sale_menu_root">

            <menuitem id="menu_account_move_comparison_wizard"
                      name="Rapports de suivi"
                      sequence="45"
                      action="action_account_move_comparison_wizard"/>
        </menuitem>
        >

    </data>
</odoo>