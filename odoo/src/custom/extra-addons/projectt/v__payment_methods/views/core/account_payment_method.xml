<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_payment_method_view_form" model="ir.ui.view">
            <field name="name">account_payment_method_view_form</field>
            <field name="model">account.payment.method</field>
            <field name="arch" type="xml">
                <form string="account_payment_method_form">
                    <sheet>
                        <field name="code" invisible="1" force_save="1" />
                        <group col="4">
                            <field name="name" />
                            <field name="payment_type" readonly="1" force_save="1" />
                        </group>
                        <notebook>
                            <page name="payment_stages" string="Étapes des paiements">
                                <field name="stage_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle" />
                                        <field name="name" />
                                        <field name="type" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_payment_method_view_tree" model="ir.ui.view">
            <field name="name">account_payment_method_view_tree</field>
            <field name="model">account.payment.method</field>
            <field name="arch" type="xml">
                <tree string="account_payment_method_tree">
                    <field name="name" />
                    <field name="code" />
                    <field name="payment_type" />
                </tree>
            </field>
        </record>

        <record id="account_payment_method_action" model="ir.actions.act_window">
            <field name="name">Méthodes de paiement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment.method</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': 0, 'delete': 0}</field>
        </record>

        <menuitem id="account_payment_method_menu"
                  name="Méthodes de paiement"
                  parent="account.root_payment_menu"
                  action="account_payment_method_action"
                  sequence="21" />

    </data>
</odoo>
