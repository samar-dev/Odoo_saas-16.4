<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_batch_payment_form_inherit" model="ir.ui.view">
            <field name="name">view_batch_payment_form_inherit</field>
            <field name="model">account.batch.payment</field>
            <field name="inherit_id"
                   ref="account_batch_payment.view_batch_payment_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_ids']" position="attributes">
                    <attribute name="domain">[('batch_payment_id', '=', False),
                        ('state', '=', 'posted'), ('is_move_sent', '=', False),
                        ('payment_method_id', '=', payment_method_id), ('journal_id',
                        '=', journal_id), ('payment_type','=',batch_type), ('amount',
                        '!=', 0), ('x_next_stage_id.type', '=', 'must_be_sent')]
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="hide_destination_journal" invisible="1" />
                    <field name="destination_journal_id"
                           force_save="1"
                           required="1"
                           attrs="{'invisible': [('hide_destination_journal', '=', True)]}"
                           options="{'no_create': 1, 'no_edit': 1}"
                           domain="[('type', '=', 'bank')]" />
                </xpath>

                <xpath expr="//field[@name='payment_method_id']" position="after">
                    <field name="move_to_next_stage" />
                </xpath>

                <xpath expr="//field[@name='name']" position="after">
                    <field name="payment_method_code" invisible="1" />
                    <field name="external_ref" />
                    <field name="delivered_by" />
                    <field name="x_banknote_type"
                           attrs="{'invisible': [('payment_method_code', '!=', 'v-banknote')]}" />
                </xpath>

                <xpath expr="//field[@name='payment_ids']/tree/field[@name='date']" position="after">
                    <field name="due_date" />
                </xpath>

            </field>
        </record>


    </data>
</odoo>
