<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="notify_payment_to_be_sent_cron" forcecreate='True' model="ir.cron">
            <field name="name">Payment: Get Notification about Unsent Payments</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_account_payment" />
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=5, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="state">code</field>
            <field name="code">model.action_notify_about_unsent_payments()</field>
        </record>

    </data>
</odoo>
