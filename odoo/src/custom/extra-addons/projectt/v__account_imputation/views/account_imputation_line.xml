<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_imputation_line_view_tree" model="ir.ui.view">
            <field name="name">account_imputation_line_view_tree</field>
            <field name="model">account.imputation.line</field>
            <field name="arch" type="xml">
                <tree string="account_imputation_line_tree"
                      decoration-danger="excluded">
                    <field name="excluded" invisible="1" />
                    <field name="company_id" invisible="1" />
                    <header>
                        <button name="action_set_excluded"
                                class="btn-danger ml-2"
                                icon="fa-minus"
                                type="object"
                                string="Exclude" />
                        <button name="action_set_included"
                                class="btn-success ml-2"
                                icon="fa-plus"
                                type="object"
                                string="Include" />
                    </header>
                    <field name="date" />
                    <field name="move_id" />
                    <field name="move_line_id" />
                    <field name="partner_id" widget="res_partner_many2one" />
                    <field name="credit" />
                    <field name="debit" />
                    <field name="account_id" />
                    <field name="new_account_id" />
                    <field name="journal_id" />
                    <field name="matching_number" />

                </tree>
            </field>
        </record>

        <record id="account_imputation_line_search_view" model="ir.ui.view">
            <field name="name">account_imputation_line_search_view</field>
            <field name="model">account.imputation.line</field>
            <field name="arch" type="xml">
                <search string="Search...">
                    <field name="move_id" />
                    <field name="move_line_id" />
                    <field name="journal_id" />
                    <field name="account_id" />
                    <field name="new_account_id" />
                    <group expand="1" string="Group By">
                        <filter string="User"
                                name="create_uid"
                                context="{'group_by':'create_uid'}" />
                        <filter string="Partner"
                                name="partner_id"
                                context="{'group_by':'partner_id'}" />
                        <filter string="Company"
                                name="company"
                                context="{'group_by':'company_id'}"
                                groups="base.group_multi_company" />
                        <separator orientation="vertical" />
                        <filter name="old_account_id"
                                string="Old account"
                                context="{'group_by':'account_id'}" />
                        <filter name="new_account_id"
                                string="New account"
                                context="{'group_by':'new_account_id'}" />
                        <filter name="matching_number"
                                string="Matching #"
                                context="{'group_by':'matching_number'}" />
                        <separator orientation="vertical" />
                        <filter string="Date"
                                name="date_group"
                                context="{'group_by':'date:month'}" />
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>
