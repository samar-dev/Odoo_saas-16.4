<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- base structure of product.template, common with product.template -->

        <record id="product_template_budget_form_inherit_view" model="ir.ui.view">
            <field name="name">Product budget form view</field>
            <field name="model">product.template</field>
            <field name="mode">primary</field>
            <field eval="1" name="priority"/>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='volume']" position="after">
                    <field name="list_price"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>