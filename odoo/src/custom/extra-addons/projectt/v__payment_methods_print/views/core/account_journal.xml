<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_journal_form_inherit" model="ir.ui.view">
            <field name="name">view_account_journal_form_inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='inbound_payment_method_line_ids']/tree" position="inside">
                    <field name="qweb_template_id" optional="show" />
                    <field name="report_paperformat_id" optional="show" />
                </xpath>

                <xpath expr="//field[@name='outbound_payment_method_line_ids']/tree" position="inside">
                    <field name="qweb_template_id" optional="show" />
                    <field name="report_paperformat_id" optional="show" />
                </xpath>

            </field>
        </record>


    </data>
</odoo>
