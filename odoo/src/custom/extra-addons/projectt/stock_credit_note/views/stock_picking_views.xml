<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="sale_id" invisible="1"/>
                    <field name="credit_note_id"  invisible="1"/>
                    <field name="show_reverse_button" invisible="1"/>
                    <button name="action_reverse"
                            string="Credit Note"
                            type="object"
                            attrs="{'invisible':[('show_reverse_button','=' ,False)]}"
                            groups="account.group_account_invoice,account.group_account_manager,account.group_account_user"/>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="object"
                            name="action_view_credit_note"
                            string="Credit note"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible':[('credit_note_id','=', False)]}"
                            groups="account.group_account_invoice,account.group_account_manager,account.group_account_user">
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>