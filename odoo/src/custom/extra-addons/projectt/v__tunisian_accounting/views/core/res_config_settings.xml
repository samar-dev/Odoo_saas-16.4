<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res_config_settings_view_form_inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Comptabilité Tunisienne" string="Comptabilité Tunisienne"
                         name="v__tunisian_accounting">
                        <block title="Comptabilité Tunisienne">

                            <div class="row mt16 o_settings_container">
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_v__payment_methods" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_v__payment_methods" />
                                        <div class="text-muted">
                                            Ajouter des modes de paiement comme les chèques
                                            et les virements
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_v__payment_replace" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_v__payment_replace" />
                                        <div class="text-muted">
                                            Ajouter la possibilité de remplacer un paiement
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt16 o_settings_container">
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_v__tax_stamp" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_v__tax_stamp" />
                                        <div class="text-muted">
                                            Ajouter le timbre fiscal sur les factures
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_v__withholding_taxes" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_v__withholding_taxes" />
                                        <div class="text-muted">
                                            Ajouter la retenue à la source comme mode de
                                            paiement
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt16 o_settings_container">
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_v__payment_methods_print" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_v__payment_methods_print" />
                                        <div class="text-muted">
                                            Ajoutez les rapports imprimables liés au moyen
                                            de paiement
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_v__payment_methods_tracking" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_v__payment_methods_tracking" />
                                        <div class="text-muted">
                                            Créer une écriture de journal lors du transfert
                                            du paiement d'une étape à une autre
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt16 o_settings_container">
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_v__account_imputation" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_v__account_imputation" />
                                        <div class="text-muted">
                                            Ajouter la possibilité de modifier le compte des écritures comptables en
                                            masse
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_v__automatic_commission_entries" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_v__automatic_commission_entries" />
                                        <div class="text-muted">
                                            Ajouter la possibilité de créer une commission automatique sur les écritures
                                            comptables
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt16 o_settings_container">
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_v__factoring_payments" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_v__factoring_payments" />
                                        <div class="text-muted">
                                            Factoring permet à l'entreprise d'obtenir des
                                            liquidités immédiates au lieu d'attendre que les
                                            clients paient leurs factures.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
