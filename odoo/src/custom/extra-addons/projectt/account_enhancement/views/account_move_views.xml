<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_post'][2]" position="attributes">
                    <attribute name="confirm">Before validating the invoice, are you sure you have selected the correct
                        journal?
                    </attribute>
                </xpath>

                <xpath expr="//form/header" position="inside">
                    <button name="action_generate_entry"
                            type="object"
                            string="Reclasser"
                            class="btn-primary"
                            icon="fa-exchange"
                            attrs="{'invisible': ['|', ('state', '=', 'draft'), '|', ('entry_generated', '=', True), ('move_type', '!=', 'in_invoice')]}"/>
                </xpath>
                <xpath expr="//form" position="inside">
                    <field name="entry_generated" invisible="1"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
