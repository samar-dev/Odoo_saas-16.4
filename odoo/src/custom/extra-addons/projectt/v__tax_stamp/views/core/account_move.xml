<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view_move_form_inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="refund_tax_stamp"
                           attrs="{'invisible': [('move_type', 'not in', ('in_refund', 'out_refund'))]}" />
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                    <field name="is_tax_stamp" invisible="1" />
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('is_tax_stamp', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('is_tax_stamp', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('is_tax_stamp', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('is_tax_stamp', '=', True)]}</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
