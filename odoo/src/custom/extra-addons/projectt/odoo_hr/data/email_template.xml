<?xml version="1.0"?>
<odoo>
    <record id="email_template_data_contract_expiry" model="mail.template">
        <field name="name">Contract: Expiry</field>
        <field name="model_id" ref="hr_contract.model_hr_contract"/>
        <field name="subject">Alerte d'expiration d'un contrat de travail</field>
        <field name="email_to">ants@ants.com.tn</field>
        <field name="body_html" type="html">
            <table border="0" cellpadding="0" cellspacing="0" width="590"
                   style="background-color: white; border-collapse: collapse; margin-left: 20px;">
                <tr>
                    <td valign="top" style="padding: 0px 10px;">
                        <div style="font-size: 13px; margin: 0px; padding: 0px;">
                            Bonjour,
                            <br/>
                            Prière de noter que le contrat ci-dessous arrivera bientôt à échéances:
                            <br/>
                            <b>Employée:</b>
                            ${object.employee_id.name}
                            <br/>
                            <b>Date début du contrat:</b>
                            ${object.date_start}
                            <br/>
                            <b>Date Fin du contrat:</b>
                            ${object.date_end}
                            <br/>
                            <b>Type de contrat:</b>
                            ${object.contract_type}
                            <br/>
                            <br/>
                            <br/>
                            Cordialement,
                            <br/>
                            Equipe RH
                        </div>
                    </td>
                </tr>
            </table>
        </field>
    </record>

