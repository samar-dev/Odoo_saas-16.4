<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="template_bc_fournisseur_import">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="row">
                            <img src="https://i.imgur.com/gmdz0XW.png" style=" height:100px;width:1000px ;padding-top:0px; margin-bottom: 0%;margin-left:40px;"/>
                        </div>
                        <h4 style="text-align:center;">PURCHASE ORDER</h4>
                        <table style="width:100%; border: 1px solid black;">
                             <tr style="width:100%; border: 1px solid black; background-color: #D3D3D3;text-align:center; height:30px;">
                                <th style="width:15%; border: 1px solid black;">Order No</th>
                                <th style="width:15%; border: 1px solid black;">Order Date</th>
                                <th style="width:15%; border: 1px solid black;">Delivery Date and Time</th>
                                <th style="width:15%; border: 1px solid black;">Port of Discharge</th>
                                <th style="width:15%; border: 1px solid black;">Final Destination</th>
                                <th style="width:15%; border: 1px solid black;">Currency</th>
                            </tr>
                            <tr style="width:100%; border: 1px solid black; text-align:center; ;">
                                <td style="width:15%; border: 1px solid black;"> <span t-field="o.name"/> </td>
                                <td style="width:15%; border: 1px solid black;"> <span t-field="o.date_order"/> </td>
                                <td style="width:15%; border: 1px solid black;">  <span t-field="o.date_planned"/></td>
                                <td style="width:15%; border: 1px solid black;">   <span t-field="o.discharge_port"/></td>
                                <td style="width:15%; border: 1px solid black;"> <span t-field="o.user_id.property_warehouse_id"/> </td>
                                <td style="width:15%; border: 1px solid black;"> <span t-field="o.currency_id"/> </td>
                            </tr>
                            <tr style="width:100%; border: 1px solid black; background-color: #D3D3D3; text-align:center; height:30px; ">
                                <td style="width:15%; border: 1px solid black;"><b>Seller details</b></td>
                                <td style="width:15%; border: 1px solid black;"><b>Buyer details</b></td>
                                <td style="width:15%; border: 1px solid black;"><b>Shipment Date</b></td>
                                <td style="width:15%; border: 1px solid black;"><b>Port of loading</b></td>
                                <td style="width:15%; border: 1px solid black;"><b>Orgin of Goods</b></td>
                                <td style="width:15%; border: 1px solid black;"><b>Payment Terms</b></td>
                            </tr>
                            <tr style="width:100%; border: 1px solid black; text-align:center; height:30px;">
                                <td style="width:15%; border: 1px solid black;" rowspan="3"> <span t-field="o.partner_id.street"/>  <span t-field="o.partner_id.city"/> <span t-field="o.partner_id.zip"/></td>
                                <td style="width:15%; border: 1px solid black;" rowspan="3"> <span t-field="o.company_id.street"/>  <span t-field="o.company_id.city"/> <span t-field="o.company_id.zip"/> <span t-field="o.company_id.state_id"/> <span t-field="o.company_id.country_id"/></td>
                                <td style="width:15%; border: 1px solid black;" rowspan="3"> <span t-field="o.shipping_date"/></td>
                                <td style="width:15%; border: 1px solid black;" rowspan="3"> <span t-field="o.loading_port"/></td>
                                <td style="width:15%; border: 1px solid black; "><span t-field="o.partner_id.country_id"/></td>
                                <td style="width:15%; border: 1px solid black; "><span t-field="o.payment_term_id"/></td>
                            </tr>
                            <tr style="width:100%; border: 1px solid black; text-align:center; height:30px;">
                                <td style="width:15%; border: 1px solid black; background-color: #D3D3D3;"><b>Free Detention Days</b></td>
                                <td style="width:15%; border: 1px solid black; background-color: #D3D3D3;"><b>Inco Terms</b></td>
                            </tr>
                            <tr style="width:100%; border: 1px solid black; text-align:center;">
                                <td style="width:15%; border: 1px solid black;"><span t-field="o.free_detention_days"/> </td>
                                <td style="width:15%; border: 1px solid black;"> <span t-field="o.incoterm_id"/></td>
                            </tr>
                            <tr style="width:100%; border: 1px solid black; height:40px;">
                                <td style="width:30%; border: 1px solid black;padding-left:2%;" colspan="2" rowspan="2"><b>Prepared By:</b> <span t-field="o.user_id"/></td>
                                <td style="width:30%; border: 1px solid black;padding-left:2%;" colspan="2"> <b>Phone No: </b><span t-field="o.user_id.phone"/></td>
                                <td style="width:30%; border: 1px solid black;padding-left:2%;" colspan="2"><b>Mobile: </b><span t-field="o.user_id.mobile"/></td>
                            </tr>
                            <tr style="width:100%; border: 1px solid black; height:40px;">
                                <td style="width:30%; border: 1px solid black;padding-left:2%;" colspan="2"><b>Fax No: </b></td>
                                <td style="width:30%; border: 1px solid black; padding-left:2%;" colspan="2"><b>E-mail: </b><span t-field="o.user_id.email"/></td>
                            </tr>
                        </table>
                        <br/>
                        <table style="width:100%; border: 1px solid black;">
                            <tr style="width:100%; border: 1px solid black; background-color: #D3D3D3; height:40px;">
                                <th style="width:10%; border: 1px solid black;">Item Code</th>
                                <th style="width:10%; border: 1px solid black;">Item Description</th>
                                <th style="width:10%; border: 1px solid black;">Qty</th>
                                <th style="width:10%; border: 1px solid black;">Purchase price</th>
                                <th style="width:10%; border: 1px solid black;">Discount</th>
                                <th style="width:10%; border: 1px solid black;">Net Price</th>
                                <th style="width:10%; border: 1px solid black;">Total</th>
                            </tr>
                            <tr t-foreach="o.order_line" t-as="tbl" style="width:100%; height:15pt ; text-align: center; border: 1px solid black;">
                                <td style="width:10%; border: 1px solid black;"><span t-field="tbl.product_template_id.default_code"/> </td>
                                <td style="width:10%; border: 1px solid black;"><span t-field="tbl.name"/> </td>
                                <td style="width:10%; border: 1px solid black;"><span t-field="tbl.product_qty"/> </td>
                                <td style="width:10%; border: 1px solid black;"><span t-field="tbl.price_unit"/> </td>
                                <td style="width:10%; border: 1px solid black;"><span t-field="tbl.pol_discount"/> </td>
                                <td style="width:10%; border: 1px solid black;"><span t-field="tbl.price_subtotal"/> </td>
                                <td style="width:10%; border: 1px solid black;"><span t-field="tbl.price_total"/> </td>
                            </tr>
                            <tr style="width:100%; border: 1px solid black;">
                                <td style="width:10%; border: 1px solid black; text-align:center;" colspan="6"><b>Total :</b></td>
                                <td style="width:10%; border: 1px solid black; text-align:center;"><span t-field="o.amount_total"/> </td>
                            </tr>
                        </table>
                        <br/>
                        <p><b>Amount in Words(Inclusive of VAT):</b> <t t-esc="o.currency_id.amount_to_text(o.amount_total)"/></p>
                        <p><b>General condition:</b><span t-field="o.notes"/> </p>
                        <div class="footer" style="height:250px;">
                            <div class="row">
                                <div style="width: 20%;">
                                    <h6 style="text-align:left; color:red; padding-top:50px; "><span t-field="o.company_id.website"/></h6>
                                </div>
                                <div style="width: 80%; border-radius: 40px 10px ;border-right:15px solid #DAA520; border-bottom:10px solid #DAA520; border-top:1px solid white; border-left:1px solid white;">
                                    <table style="border:white; width:100%; color:#808080;">
                                        <tr style="border:white; width:100%;height:20px;text-align:center;">
                                            <td style="border:white; width:100%;">SOCIETE TUNISIENNE DE CONDITIONNEMENT DE PRODUIT ALIMENTAIRES</td>
                                        </tr>
                                        <tr style="border:white; width:100%;height:20px;text-align:center;">
                                            <td style="border:white; width:100%;">STCA AL JAZIRA S.A.R.L - Zone industrielle Mornag BP 81 - Tunisie</td>
                                        </tr>
                                        <tr style="border:white; width:100%;height:20px; text-align:center;">
                                            <td style="border:white; width:100%;"><b>TÃ©l :</b> <span t-field="o.company_id.phone"/> <b>Fax :</b>  <b>Email :</b> <span t-field="o.company_id.email"/></td>
                                        </tr>
                                        <tr style="border:white; width:100%; height:20px; text-align:center;">
                                            <td style="border:white; width:100%;"><b>Code TVA :</b> <span t-field="o.company_id.vat"/> <b>RC :</b> <span t-field="o.company_id.company_registry"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
