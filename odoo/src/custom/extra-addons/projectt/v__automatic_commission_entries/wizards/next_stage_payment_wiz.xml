<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="next_stage_payment_wiz_view_form_inherit" model="ir.ui.view">
            <field name="name">next_stage_payment_wiz_view_form_inherit</field>
            <field name="model">next.stage.payment.wiz</field>
            <field name="inherit_id"
                   ref="v__payment_methods_tracking.next_stage_payment_wiz_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <field name="show_commission_table" invisible="1" />
                        <page string="Commissions"
                              attrs="{'invisible': [('show_commission_table', '=', False)]}">
                            <field name="next_stage_payment_commission_line_ids">
                                <tree editable="bottom" create="0" edit="1" delete="0">
                                    <field name="name" />
                                    <field name="value_type" />
                                    <field name="value" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
