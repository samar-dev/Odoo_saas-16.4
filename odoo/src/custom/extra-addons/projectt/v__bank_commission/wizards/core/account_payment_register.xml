<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_register_form_inherit" model="ir.ui.view">
            <field name="name">view_account_payment_register_form_inherit</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form" />
            <field name="arch" type="xml">

                <xpath expr="//group[@name='group3']" position="after">
                    <group attrs="{'invisible': [('payment_difference_handling', '=', 'open')]}">
                        <label for="commission_amount" />
                        <div>
                            <field name="commission_amount" />
                            <div>
                                <label for="commission_account_id"
                                       class="oe_edit_only" />
                                <field name="commission_account_id"
                                       options="{'no_create': 1}"
                                       attrs="{'required': [('commission_amount', '>', 0)]}" />
                                <label for="commission_label" class="oe_edit_only" />
                                <field name="commission_label"
                                       attrs="{'required': [('commission_amount', '>', 0)]}" />
                            </div>
                        </div>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
