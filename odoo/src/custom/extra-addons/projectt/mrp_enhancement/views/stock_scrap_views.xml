<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_stock_scrap_form_inherit_note" model="ir.ui.view">
            <field name="name">stock.scrap.form.inherit.note</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="categ_id" options="{'no_open': True, 'no_create': True}"/>
                    <field name="note"/>
                </xpath>
            </field>
        </record>

        <record id="view_stock_scrap_categ_tree" model="ir.ui.view">
            <field name="name">stock.scrap.categ.tree</field>
            <field name="model">stock.scrap.categ</field>
            <field name="arch" type="xml">
                <tree string="Scrap Categories">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="stock_scrap_form_view2" model="ir.ui.view">
            <field name="name">stock.scrap.form.view2</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="categ_id" required="1"/>
                    <field name="note" required="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_stock_scrap_categ_form" model="ir.ui.view">
            <field name="name">stock.scrap.categ.form</field>
            <field name="model">stock.scrap.categ</field>
            <field name="arch" type="xml">
                <form string="Scrap Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_stock_scrap_categ" model="ir.actions.act_window">
            <field name="name">Scrap Categories</field>
            <field name="res_model">stock.scrap.categ</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_stock_scrap_categ_root"
                  name="Scrap Categories"
                  parent="mrp.menu_mrp_configuration"
                  action="action_stock_scrap_categ"/>


    </data>
</odoo>