<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_production_filter_inherit" model="ir.ui.view">
        <field name="name">mrp.production.filter.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="Parent Work Center" name="parent_work_center"
                        context="{'group_by': 'parent_workcenter_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.view.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('type', 'in', ['product', 'consu'])]</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="mrp_production_id" options="{'no_create': 1, 'no_edit': 1}"/>
            </xpath>
        </field>
    </record>
</odoo>
