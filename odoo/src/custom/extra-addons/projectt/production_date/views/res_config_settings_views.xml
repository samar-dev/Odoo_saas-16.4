<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_production" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.production.date</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='group_lot_on_delivery_slip']" position="after">
                <setting id="production_dates_serial_numbers" help="Set production dates on lots &amp; serial numbers">
                    <field name="config_production_date"/>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>
