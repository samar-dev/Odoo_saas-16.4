<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view_move_form_inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="with_withholding"
                           attrs="{'readonly': [('state', '!=', 'draft')]}" />
                    <field name="withholding_tax_id"
                           options="{'no_create': 1, 'no_edit': 1}"
                           attrs="{'invisible': [('with_withholding', '=', False)], 'required': [('with_withholding', '=', True)], 'readonly': [('state', '!=', 'draft')]}" />
                </xpath>

            </field>
        </record>


    </data>
</odoo>
