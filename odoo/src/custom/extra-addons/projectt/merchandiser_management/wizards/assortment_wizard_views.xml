<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_assortment_wizard_form" model="ir.ui.view">
            <field name="name">view.assortment.wizard.form</field>
            <field name="model">assortment.wizard</field>
            <field name="arch" type="xml">
                <form string="Assortment">
                    <sheet>
                        <group>
                            <field name="assortment_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="date_assortment"/>
                            <field name="partner_id"/>
                            <field name="store_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_add_assortment" type="object"
                                string="Add an assortment" class="btn-primary" data-hotkey="q"/>
                        <button special="cancel" data-hotkey="x" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
