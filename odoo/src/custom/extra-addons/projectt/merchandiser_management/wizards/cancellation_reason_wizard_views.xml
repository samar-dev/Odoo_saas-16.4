<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_cancellation_reason_wizard_form" model="ir.ui.view">
            <field name="name">view.cancellation.reason.wizard.form</field>
            <field name="model">cancellation.reason.wizard</field>
            <field name="arch" type="xml">
                <form string="Reason">
                    <sheet>
                        <group>
                                <field name="reason" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="add_cancellation_reason" type="object"
                                string="Add reason" class="btn-primary" data-hotkey="q"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
