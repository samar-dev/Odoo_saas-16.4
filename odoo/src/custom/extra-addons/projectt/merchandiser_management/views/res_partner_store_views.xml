<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_store_tree" model="ir.ui.view">
        <field name="name">res.partner.store.tree</field>
        <field name="model">res.partner.store</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="position"/>
                <field name="partner_id"/>
                <field name="address"/>
                <field name="product_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_res_partner_store_form" model="ir.ui.view">
        <field name="name">res.partner.store.form</field>
        <field name="model">res.partner.store</field>
        <field name="arch" type="xml">
            <form string="Store">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="position"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="address"/>
                        </group>
                    </group>
                    <group string="Products in Store">
                        <field name="product_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_res_partner_store" model="ir.actions.act_window">
        <field name="name">Stores</field>
        <field name="res_model">res.partner.store</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_partner_store_tree"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_res_partner_store" name="Stores" parent="menu_assortment_config"
              action="action_res_partner_store" sequence="2"/>
</odoo>