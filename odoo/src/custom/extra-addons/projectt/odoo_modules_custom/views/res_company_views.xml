<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherited res.company form view to add backend -->
        <record id="res_company_view_company_form" model="ir.ui.view">
            <field name="name">res.company.form.odoo</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath
                        expr="//field[@name='intercompany_user_id']"
                        position="after"
                >
                    <field
                            name="is_blocked"
                    />
                    <field name="blocked_year_ids" widget="many2many_tags"/>
                    <field name="have_currency"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
