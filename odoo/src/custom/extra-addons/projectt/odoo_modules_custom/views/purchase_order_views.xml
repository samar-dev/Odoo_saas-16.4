<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="odoo_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">odoo.purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True,'always_reload': True}</attribute>
                    <attribute name="domain">[('x_autorised', '=', True)]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
