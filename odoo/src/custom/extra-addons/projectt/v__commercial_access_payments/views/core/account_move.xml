<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view_move_form_inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_register_payment']"
                       position="attributes">
                    <attribute name="groups"
                               add="v__commercial_access_payments.group_special_access_payment"
                               separator="," />
                </xpath>

            </field>
        </record>

        <record id="account.action_account_invoice_from_list" model="ir.actions.server">
            <field name="groups_id" eval="[(4, ref('v__commercial_access_payments.group_special_access_payment'))]"/>
        </record>


    </data>
</odoo>
