<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_res_partner_validator_list_tree" model="ir.ui.view">
            <field name="name">res.partner.validator.list.tree</field>
            <field name="model">res.partner.validator.list</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="validator_ids"/>
                </tree>
            </field>
        </record>

        <record id="view_res_partner_validator_list_form" model="ir.ui.view">
            <field name="name">res.partner.validator.list.form</field>
            <field name="model">res.partner.validator.list</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="validator_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_partner_validator_list" model="ir.actions.act_window">
            <field name="name">Partner Validator Templates</field>
            <field name="res_model">res.partner.validator.list</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_partner_validator_list_root"
                  name="Partner Validator Templates"
                  sequence="5"
                  parent="contacts.res_partner_menu_config"
                  action="action_partner_validator_list"/>

    </data>
</odoo>