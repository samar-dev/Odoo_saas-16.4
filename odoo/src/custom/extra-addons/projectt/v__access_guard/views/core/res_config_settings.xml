<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res_config_settings_view_form_inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Access Guard"
                         string="Access Guard"
                         name="v__access_guard">
                        <block title="Access Guard">
                            <div class="row mt16 o_settings_container">
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_method_access_guard" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_method_access_guard" />
                                        <div class="text-muted">
                                            Add the ability to prevent users from using
                                            certain methods
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="module_data_access_guard" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_data_access_guard" />
                                        <div class="text-muted">
                                            Add the ability to add a dynamic domain per user
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
