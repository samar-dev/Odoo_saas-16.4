<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="mrp_workorder.MrpDisplayMenuDialog" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[@name='action_scrap']" position="before">
            <button class="btn btn-outline-secondary d-flex justify-content-between align-items-center p-3 fs-3"
                    name="other_information"
                    t-on-click="() => this.callAction('button_add_information')">
                        Other information <i class="oi oi-chevron-right"/>
            </button>
        </xpath>
    </t>
</templates>
