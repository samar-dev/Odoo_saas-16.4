<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_production_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.production.inherited.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='miscellaneous']" position="after">
                    <page string="Other information" name="other_information">
                        <group>
                            <group>
                                <field name="operator_employee_ids" options="{'no_create': True}" widget="many2many_tags"/>
                                <field name="production_planning_reference"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
