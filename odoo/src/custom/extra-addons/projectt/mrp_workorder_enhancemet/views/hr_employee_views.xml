<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_form_workorder" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit.mrp.workorder.hr</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='managers']" position='before'>
                    <group name="manufacturing" string="Manufacturing">
                        <field name="workcenter_manufacturing" widget="boolean_toggle"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
