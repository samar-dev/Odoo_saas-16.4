<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_form_sector" model="ir.ui.view">
        <field name="name">purchase.sector.form</field>
        <field name="model">purchase.sector</field>
        <field name="arch" type="xml">
            <form string="Sector">
                <group>
                    <field name="name"/>
                    <field name="setor_parent_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_tree_sector" model="ir.ui.view">
        <field name="name">purchase.sector.tree</field>
        <field name="model">purchase.sector</field>
        <field name="arch" type="xml">
            <tree string="Sector">
                <field name="name"/>
                <field name="setor_parent_id"/>
            </tree>
        </field>
    </record>
</odoo>
