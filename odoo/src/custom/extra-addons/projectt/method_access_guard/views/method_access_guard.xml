<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="method_access_guard_view_tree" model="ir.ui.view">
            <field name="name">method_access_guard_view_tree</field>
            <field name="model">method.access.guard</field>
            <field name="arch" type="xml">
                <tree string="method_access_guard_tree" editable="top">
                    <field name="blacklisted_user_ids" invisible="1" />
                    <field name="model_name" invisible="1" />
                    <field name="method_name" />
                    <field name="model_id" options="{'no_create': 1, 'no_edit': 1}" />
                    <field name="type" />
                    <field name="group_ids"
                           options="{'no_create': 1, 'no_edit': 1}"
                           widget="many2many_tags" />
                    <field name="user_ids"
                           options="{'no_create': 1, 'no_edit': 1}"
                           widget="many2many_tags" />
                    <field name="message" />
                    <field name="create_uid" optional="hide" />
                    <field name="create_date" optional="hide" />
                    <field name="write_date" optional="hide" />
                </tree>
            </field>
        </record>

        <record id="method_access_guard_action" model="ir.actions.act_window">
            <field name="name">Method Access Guard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">method.access.guard</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>
