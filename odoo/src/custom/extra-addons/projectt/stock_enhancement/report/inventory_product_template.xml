<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="template_inventory_product">
         <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <style>
                    h3 {
                    text-align: center;
                    text-transform: uppercase;
                    color: #675fb3;
                    }

                    th {
                    font-weight: bolder;
                    background-color: #f2f2f2;
                    color: #675fb3;
                    }

                    .row {
                    padding: 5px;
                    }

                    .col-3 {
                    border: 1px solid #675fb3;
                    padding: 5px;
                    margin-left: 5px;
                    }

                    .page {
                    font-size: 12px;
                    }

                    .row {
                    width: 100%;
                    }

                    .of_corp_left {
                    width: 100%;
                    border-collapse: collapse;
                    border: 1px solid #000;
                    text-align: left;
                    margin-left: auto;
                    margin-right: auto;
                    margin-top: 5px;
                    margin-bottom: 5px;
                    }

                    .text {
                    padding: 10px;
                    text-align: center;
                    }
                </style>
                <div class="page">
                    <br/>
                    <div class="row mt32 mb32 of_corp_left text">
                        <div class="col-5 text-center">
                            <h3>INVENTAIRE STOCK</h3>
                            <br/>
                        </div>
                        <div class="col-7" style="text-align:right;">
                            <strong>Date d'impression :</strong>
                            <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
                            <br/>
                            <strong>Imprim√© par :</strong>
                            <span t-esc="user.name"/>
                        </div>
                    </div>
                    <t t-set="locations" t-value="docs.mapped('location_id')"/>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th groups="stock.group_stock_multi_locations">
                                    <strong>Location</strong>
                                </th>
                                <th>
                                    <strong>Product</strong>
                                </th>
                                <th class="text-end">
                                    <strong>Category</strong>
                                </th>
                                <th groups="stock.group_production_lot">
                                    <strong>Lot/Serial Number</strong>
                                </th>
                                <!--<th groups="stock.group_tracking_lot"><strong>Package</strong></th>-->
                                <th class="text-end">
                                    <strong>Quantity</strong>
                                </th>
                                <th class="text-end">
                                    <strong>Counted Quantity 1</strong>
                                </th>
                                <th class="text-end">
                                    <strong>Counted Quantity 2</strong>
                                </th>
                                <th class="text-end">
                                    <strong>Counted Quantity 3</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="sorted(docs, key=lambda doc: doc.product_categ_id.name)" t-as="doc">
                                <td>
                                    <strong t-esc="doc.location_id.name"/>
                                </td>
                                <td>
                                    <t t-esc="doc.product_id.name"/>
                                </td>
                                <td>
                                    <t t-esc="doc.product_categ_id.name"/>
                                </td>
                                <td>
                                    <t t-esc="doc.lot_id.name"/>
                                </td>
                                <td>
                                    <t t-esc="doc.quantity"/>
                                </td>
                                <td/>
                                <td/>
                                <td/>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>