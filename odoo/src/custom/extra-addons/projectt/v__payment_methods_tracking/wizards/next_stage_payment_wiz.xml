            <field name="model">next.stage.payment.wiz</field>
            <field name="arch" type="xml">
                <form string="next_stage_payment_wiz_form">
                    <sheet>
                        <group>
                            <field name="date"
                                   options="{'datepicker': {'warn_future': true}}" />

                        </group>
                    </sheet>
