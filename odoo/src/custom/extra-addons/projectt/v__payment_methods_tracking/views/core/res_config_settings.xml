<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res_config_settings_view_form_inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//block[@id='pay_invoice_online_setting_container']/setting[1]"
                       position="before">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="x_verify_payment" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="x_verify_payment" />
                            <div class="text-muted">
                                Ajouter une étape de vérification aux paiements.
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
