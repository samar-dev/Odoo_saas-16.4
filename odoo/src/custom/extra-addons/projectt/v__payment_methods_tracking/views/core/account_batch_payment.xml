<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_batch_payment_form_inherit" model="ir.ui.view">
            <field name="name">view_batch_payment_form_inherit</field>
            <field name="model">account.batch.payment</field>
            <field name="inherit_id"
                   ref="account_batch_payment.view_batch_payment_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_ids']" position="attributes">
                    <attribute name="domain">[('batch_payment_id', '=', False),
                        ('state', '=', 'posted'), ('is_move_sent', '=', False),
                        ('payment_method_id', '=', payment_method_id), ('journal_id',
                        '=', journal_id), ('payment_type','=',batch_type), ('amount',
                        '!=', 0), ('x_new_next_stage_id.type', '=', 'must_be_sent')]
                    </attribute>
                </xpath>

            </field>
        </record>


    </data>
</odoo>
