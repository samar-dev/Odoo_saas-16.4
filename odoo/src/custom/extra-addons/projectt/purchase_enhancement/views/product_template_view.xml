<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_product_template_form_target_price" model="ir.ui.view">
            <field name="name">product.template.form.target.price</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_pallet']" position="after">
                    <field name="target_price" readonly="1"/>
                    <field name="max_purchase_price"/>
                    <field name="is_target_price_valid" readonly="1" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_product_template_tree_target_price" model="ir.ui.view">
            <field name="name">product.template.tree.target.price</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="target_price"/>
                    <field name="max_purchase_price"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>