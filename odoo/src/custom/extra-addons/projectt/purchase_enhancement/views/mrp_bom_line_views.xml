<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrp_bom_form_inherit_add_max_purchase_price" model="ir.ui.view">
            <field name="name">mrp.bom.form.inherit.add_max_purchase_price_in_byproduct</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <!-- Target the One2many field 'bom_line_ids' tree -->
                <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
                    <field name="max_purchase_price"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>